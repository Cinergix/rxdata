{
  "name": "rxdata",
  "version": "3.2.1",
  "description": "A reactive document database for web browsers",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf coverage dist",
    "build": "npm run clean && tsc",
    "test": "jest --env jsdom --coverage --watch",
    "lint": "prettier --print-width 120 --single-quote --trailing-comma es5 --write \"src/**/*.ts\"",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cinergix/rxdata.git"
  },
  "keywords": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cinergix/rxdata/issues"
  },
  "homepage": "https://github.com/cinergix/rxdata#readme",
  "peerDependencies": {
    "rxjs": "^5.0.0"
  },
  "dependencies": {
    "clone": "^2.1.1",
    "localforage": "^1.4.3",
    "mingo": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^20.0.7",
    "jest": "^20.0.0",
    "localStorage": "^1.0.3",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "rxjs": "^5.4.3",
    "ts-jest": "^20.0.10",
    "typescript": "^2.0.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.jest-setup.js"
    ],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts",
      "!src/setup.ts",
      "!src/types.ts"
    ]
  }
}
